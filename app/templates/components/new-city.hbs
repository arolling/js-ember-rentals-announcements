{{#if addNewCity}}
  <h1>New City</h1>
  <div >
    <form>
      <div class="form-group">
        <label for="name">City Name</label>
        {{input class="form-control" value=name id="name"}}
      </div>
      <div class="form-group">
        <label for="country">Country</label>
        {{input class="form-control" value=country id="country"}}
      </div>
      <button class="btn btn-success" {{action 'newCity'}}>Add City</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-primary btn-lg" {{action 'cityFormShow'}}>New City</button>
{{/if}}
