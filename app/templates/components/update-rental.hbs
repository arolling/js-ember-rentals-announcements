{{#if updateRentalForm}}
  <h4>Update {{rental.owner}}'s {{rental.type}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="owner">Owner</label>
          {{input class="form-control" value=owner id="owner" placeholder=rental.owner}}
        </div>

        <div class="form-group">
          <label for="type">Type</label>
          {{input class="form-control" value=type id="type" placeholder=rental.type}}
        </div>

        <div class="form-group">
          <label for="bedrooms">Number of Bedrooms</label>
          {{input class="form-control" value=bedrooms id="bedrooms" placeholder=rental.bedrooms}}
        </div>

        <div class="form-group">
          <label for="cost">Cost per night</label>
          {{input class="form-control" type="number" value=cost id="cost" placeholder=rental.cost}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input class="form-control" value=image id="image" placeholder=rental.image}}
        </div>

        <div class="form-group">
          <label for="latitude">Latitude</label>
          {{input class="form-control" value=latitude id="latitude" placeholder=rental.latitude}}
        </div>

        <div class="form-group">
          <label for="longitude">Longitude</label>
          {{input class="form-control" value=longitude id="longitude" placeholder=rental.longitude}}
        </div>

        <div class="form-group">
          <label for="date_added">Date Added</label>
          {{input class="form-control" type="date" value=date_added id="date_added" placeholder=rental.date_added}}
        </div>

        <button class="btn btn-sm btn-success" {{action 'update' rental}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="btn btn-xs btn-primary" {{action 'updateRentalForm'}}>Update</button>
{{/if}}

{{yield}}
